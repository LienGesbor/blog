{% block postForm %}
    
    {{ form_start (form) }}
    {{ form_errors (form) }}
    
    {{ form_row (form.postTitle) }}
    <br>
    {{ form_row (form.postAuthor) }}
    <br>
    {{ form_row (form.postBody) }}
    <br>
    {{ form_row (form.postDate, {'attr': { 'id': 'postCreateDate', 'class': 'postCreationFormWidget' } } ) }}
    <br>
    
    <input type="submit" value="Create Post" class="create_post_button" />
    
    {{ form_end (form) }}
<a class="back_to_posts_link" href="/">Back to Posts</a>
{% endblock %}